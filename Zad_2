#include <iostream>
#include<time.h>
#include<algorithm>    //do sortowania
using namespace std;

int main(){
int n;
int m;
int tmp;
int *p_tmp=&tmp;

cin >>n;
cin >>m;
srand(time(NULL));

int *A = new int[n];
int *B = new int[m];
int *C = new int[n+m];

for(int i=0; i<n;i++)
    *(A+i)=rand()%11;

for(int i=0; i<m;i++)
    *(B+i)=rand()%11;

//sortowanie
sort(A,A+n);
sort(B,B+m);
cout <<"A"<<endl;
for(int i=0; i<n;i++){
    cout<<*(A+i)<<" ";
}
cout <<"\nB"<<endl;
for(int i=0; i<m;i++){
    cout<<*(B+i)<<" ";
}

for(int i=0,j=0;i+j<n+m;){

    if(i==n){
        *(C+(i+j))=*(B+j);
        j++;
    }
    else if(j==m){
        *(C+(i+j))=*(A+i);
        i++;
    }
    else{
        if(*(A+i)<*(B+j)){
         *(C+(i+j))=*(A+i);
         i++;
        }
        else{
        *(C+(i+j))=*(B+j);
        j++;
        }
    }
}

cout <<"\nC"<<endl;
for(int i=0; i<m+n;i++)
    cout<<*(C+i)<<" ";

delete []A;
delete []B;
delete []C;
}
