#include <iostream>
#include <time.h>
using namespace std;

int main()
{
int C[7][7];
srand(time(NULL));

for(int i=0; i<7; i++){
        for(int j=0; j<7; j++)
    C[i][j]=rand()%21-10;
}
for(int i=0; i<7; i++){
        for(int j=0; j<7; j++)
    cout << C[i][j] <<"\t";
    cout << "\n";
}
int maxi = C[0][0];
for(int i=0; i<7; i++){
        for(int j=0; j<7; j++){

          if(C[i][j]>maxi){
            maxi=C[i][j];
        }
}
}
cout << "Wspolrzedne:";
for(int i=0; i<7; i++){
        for(int j=0; j<7; j++){
        if(C[i][j]==maxi)
     cout << "("<< i+1 <<","<< j+1 << ")";
    }
}
return 0;
}
