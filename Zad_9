#include <iostream>
using namespace std;

int main(){
float a;      //slope of a straight
float b;      //y- intercept
float score;

cout << "Enter slope of a straight: ";
cin >> a;
cout << "Enter y- intercept: ";
cin >> b;

cout << "Solve the equation: " << a << "x + "<< b << " = 0" <<endl;

score= -b/a;

cout << "Solution of a linear equation: " <<score;
}
