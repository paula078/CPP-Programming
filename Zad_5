#include <iostream>
#include <time.h>
using namespace std;

int main(){
int n=7;
int tab[n][n];
int maxi=2;
int sum=0;

for(int i=0; i<n; i++){
        for(int j=0; j<n; j++)
           tab[i][j]=0;
}
for(int i=0; i<n;i++){
        tab[i][i]=1;
        tab[i][0]=1;
    }
for(int i=2; i<n;i++){
    for(int j=1; j<maxi; j++){
    sum=tab[i-1][j-1]+tab[i-1][j];
    tab[i][j]=sum;
}
maxi++;
}
for(int i=0; i<n; i++){
        for(int j=0; j<n; j++){
                if(tab[i][j]!=0)
            cout <<tab[i][j] << " ";
        }
 cout << "\n";
}
return 0;
}
