#include <iostream>
using namespace std;

int main(){
float H;      //the height of the pyramid
float area;     //area of base
float V;        //the volume of the pyramid

cout << "Enter the area of base of the pyramid: ";
cin >> area;
cout << "Enter height of pyramid ";
cin >> H;

V=(area*H)/3;

cout << "The volume of pyramid = " << V;
}
