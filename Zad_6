#include <iostream>
using namespace std;

int main(){

    int n;
    bool prime = true;

    cout << "Enter a positive integer: ";
    cin >> n;

if((n==0)||(n==1)){
    prime = false;
}
else{

    for(int i=2; i<=n/2; i++){

        if(n % i==0){
            prime = false;
            break;

        }
    }
    }
    if(prime) {
        cout << "It is a prime number";

    }
    else{cout << "It is not a prime number";}

return 0;
}
