#include <iostream>
#include <time.h>
using namespace std;

int main(){
int cnt=0;
int n;

cin>> n;
cout<< endl;
srand(time(NULL));
int *A = new int[n];

for(int i=0; i<n; i++){
*(A+i)=rand()%11;
cout << *(A+i)<<"   ";
}
for(int i=0; i<n; i++){
if(*(A+i)%2==0)
    cnt++;
}
cout<<"\nIlosc liczb parzystych: " << cnt;

delete []A;
return 0;
}
